<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000">
        
        <Button 
            android:id="@+id/backbtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/setText"
            android:textColor="#FFF"
            android:textSize="18sp"/>
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/set_weather_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="50dp">
            
            <ImageView 
                android:id="@+id/auto_refresh"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/auto_refresh"/>
            
            <TextView 
                android:id="@+id/auto_refresh_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/auto_refresh"
                android:layout_marginLeft="10dp"
                android:text="自动更新天气"
                android:textColor="#000"
                android:textSize="18sp"/>
            
            <CheckBox 
                android:id="@+id/auto_freshweather_ck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            
        </RelativeLayout>
        
            <View 
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="#66CCFF"/>
        
<!--         <ListView 
            android:id="@+id/set_weather_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
        </ListView> -->
        
    </LinearLayout>

</LinearLayout>
